{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block body %}
<h1>Liste des entreprises</h1>
    <a href="{{ path('new_entreprise')}}">Ajouter une entreprise</a> <br>

    {% for entreprise in entreprises %}
        {# .raisonSociale va appeler le Getter de raison social que l'on retrouve dans Entreprise.php #}
        {# {{...}} correspond a l'echo en symfony #}
        <a href="{{ path('afficherDetail_entreprise', {'id': entreprise.id}) }}">{{ entreprise }}</a>
        <a class="bbtn btn-warning" href=" {{ path('edit_entreprise', {'id' :entreprise.id}) }}">Edit</a><br>
        <a href=" {{ path('delete_entreprise', {'id' :entreprise.id}) }}">Supp</a><br>
    {% endfor %}
    
{% endblock %}
